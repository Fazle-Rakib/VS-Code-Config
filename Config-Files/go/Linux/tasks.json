//Task:shortcut to run a go file which will take input and show output of the programme automatically with programme runtime status such as memory consume and execution time
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run Go program",
            "type": "shell",
            "command": "",
            "args": [
                "go",
                "build",
                "${relativeFile}",
                "&&",
                "timeout",
                "10",
                "/usr/bin/time",
                "-v",
                "--output",
                "sys.txt",
                "./${fileBasenameNoExtension}",
                "<",
                "input.txt",
                ">",
                "output.txt",
                "&&",
                "rm",
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "go",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
    ]
}